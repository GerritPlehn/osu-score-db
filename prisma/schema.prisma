generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Map {
  id     Int     @id @default(autoincrement())
  name   String
  Scores Score[]
}

model Player {
  id      Int     @id @default(autoincrement())
  name    String
  Scores  Score[]
  matches Match[]
}

model Score {
  id       Int    @id @default(autoincrement())
  mapId    Int
  playerId Int
  map      Map    @relation(fields: [mapId], references: [id])
  player   Player @relation(fields: [playerId], references: [id])
  match    Match  @relation(fields: [matchId], references: [id])
  matchId  Int
  mods     Mod[]
}

model Match {
  id      Int      @id @default(autoincrement())
  players Player[]
  scores  Score[]
}

model Mod {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  scores Score[]
}
